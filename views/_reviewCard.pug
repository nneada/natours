mixin reviewCard(review)
    .reviews__card
        .reviews__avatar
            - const reviewerData = review.user[0]
            img.reviews__avatar-img(src=`/img/users/${reviewerData.photo}`, alt=`${reviewerData.name}`)
            h6.reviews__user= reviewerData.name
        p.reviews__text= review.review
        .reviews__rating
            each star in [1, 2, 3, 4, 5]
                svg.reviews__star(class=`reviews__star--${review.rating >= star ? "active": "inactive"}`)
                    use(xlink:href='/img/icons.svg#icon-star')
